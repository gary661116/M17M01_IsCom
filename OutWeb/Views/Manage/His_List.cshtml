                <th class="item-edit">修改</th>
                <th class="text-left">年</th>
                <th class="text-left">標題</th>
                <th class="text-left">圖片</th>
                <th class="text-left">描述</th>
                <th>
                    @* 點選排序功能 (點一下遞增 asc, 點兩下遞減 desc) *@
                    <button class="text-xs-center th-sort-toggle @class_status" name="btn_status" id="btn_status" onclick="sort('status');">顯示</button>
                </th>
                <th>
                    @* 點選排序功能 (點一下遞增 asc, 點兩下遞減 desc) *@
                    <button class="text-xs-center th-sort-toggle @class_sort" name="btn_sort" id="btn_sort" onclick="sort('sort');">排序</button>
                </th>
            </tr>
        <thead>
        <tbody>
            @* 建議: 1頁10筆資料 *@
            @if (dt.Rows.Count > 0)
            {
                for (int i = min_row - 1; i < max_row; i++)
                {
                    his_id = dt.Rows[i]["his_id"].ToString();
                    his_title = dt.Rows[i]["his_title"].ToString();
                    his_ym = dt.Rows[i]["his_ym"].ToString();
                    his_pic = img_path + dt.Rows[i]["img_file"].ToString();
                    his_desc = dt.Rows[i]["his_desc"].ToString();
                    his_sort = dt.Rows[i]["sort"].ToString();

                    if (dt.Rows[i]["status"].ToString() == "Y")
                    {
                        show = "顯示";
                        show_class = "label-success";
                    }
                    else
                    {
                        show = "隱藏";
                        show_class = "";
                    }

                    <tr>
                        <td>
                             <button type="button" onclick="del('@Url.Content("~/Manage/His_Del?his_id=" + his_id)');" class="btn btn-link text-danger oi" data-glyph="trash"></button> 
                        </td>
                        <td>
                            <button type="button" onclick="location.href='@Url.Content("~/Manage/His_Edit?his_id=" + his_id)';" class="btn btn-link oi" data-glyph="pencil"></button>
                        </td>
                        <td class="text-left">@his_ym</td>
                        <td class="text-left">@his_title</td>
                        <td>
                            @if (dt.Rows[i]["img_file"].ToString().Trim().Length > 0)
                            {
                                <img id="img_cate_@i" name="img_cate_@i" src="@his_pic" alt="">
                            }
                        </td>
                        <td class="text-left">@Html.Raw(his_desc)</td>
                        <td><span class="label @show_class">@show</span></td>
                        <td>@his_sort</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-left" colspan="7">
                        無資料
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <footer class="table-foot">



        <small class="float-r">第 @min_row - @max_row 筆，共 @row_count 筆</small>
        <nav class="pager">
            <a href="@Url.Content("~/Manage/His_List?page=" + top_page.ToString())" class="oi" data-glyph="media-step-backward" title="到最前頁"></a>
            <a href="@Url.Content("~/Manage/His_List?page=" + pre_page.ToString())" class="oi" data-glyph="caret-left" title="上一頁"></a>
            <span>
                第
                <input type="text" class="form-control form-control-sm text-xs-center" style="width:100px" name="page" id="page" value="@page">
                頁，共 @total_page 頁
            </span>
            <a href="@Url.Content("~/Manage/His_List?page=" + next_page.ToString())" class="oi" data-glyph="caret-right" title="下一頁"></a>
            <a href="@Url.Content("~/Manage/His_List?page=" + end_page.ToString())" class="oi" data-glyph="media-step-forward" title="到最後頁"></a>
        </nav>
    </footer>
</form>
