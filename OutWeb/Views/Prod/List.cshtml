                                now_cate_name += "-";
                            }
                            now_cate_name += cate_s_name;
                        }
                    }
                }

                //--Temp檔--釋放-------//
                cates1.Dispose();
                cates1 = null;

            }
        }
    }
    //========================================================//
}

