                    for (int j = 0; j < cates1.Rows.Count; j++)
                    {
                        cate_s_id = cates1.Rows[j]["cate_s_id"].ToString();
                        cate_s_name = cates1.Rows[j]["cate_name"].ToString();
                        ccs_url = "~/Prod?cateb_id=" + cate_b_id + "&cates_id=" + cate_s_id;
                        if (cate_s_id == cates_id)
